<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addLocations.AddLocationsFragment">

        <EditText
            android:id="@+id/addLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textShortMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addLocationPage_locationName" />

        <EditText
            android:id="@+id/firstTipText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textLongMessage"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/textFirstTip" />

        <EditText
            android:id="@+id/secondTipText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textLongMessage"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/textSecondTip" />

        <EditText
            android:id="@+id/thirdTipText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textLongMessage"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/textThirdTip" />

        <TextView
            android:id="@+id/textFifthTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fifth_tip"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/fourthTipText" />

        <EditText
            android:id="@+id/fifthTipText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textLongMessage"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/textFifthTip" />

        <TextView
            android:id="@+id/textThirdTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/third_tip"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/secondTipText" />

        <TextView
            android:id="@+id/textFourthTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fourth_tip"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/thirdTipText" />

        <EditText
            android:id="@+id/fourthTipText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/location_name"
            android:inputType="textLongMessage"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/textFourthTip" />

        <TextView
            android:id="@+id/addLocationPage_locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/location_name"
            app:layout_constraintStart_toStartOf="@+id/addLocationName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textFirstTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/first_tip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addLocationName" />

        <TextView
            android:id="@+id/textSecondTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/second_tip"
            app:layout_constraintStart_toStartOf="@+id/textFirstTip"
            app:layout_constraintTop_toBottomOf="@+id/firstTipText" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/registrationPage_browse"
            app:layout_constraintBaseline_toBaselineOf="@+id/firstTipText"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/registrationPage_browse"
            app:layout_constraintBaseline_toBaselineOf="@+id/secondTipText"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/registrationPage_browse"
            app:layout_constraintBaseline_toBaselineOf="@+id/thirdTipText"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/registrationPage_browse"
            app:layout_constraintBaseline_toBaselineOf="@+id/fourthTipText"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/registrationPage_browse"
            app:layout_constraintBaseline_toBaselineOf="@+id/fifthTipText"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextLongitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="@string/longitude"
            android:inputType="number|numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fifthTipText" />

        <EditText
            android:id="@+id/editTextLatitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="@string/latitude"
            android:inputType="number|numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/editTextLongitude" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/saveWrittenValuesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save written values"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLongitude" />

        <Button
            android:id="@+id/saveActualValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save actual values"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/editTextLatitude" />

        <Button
            android:id="@+id/saveLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/save_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saveWrittenValuesButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>